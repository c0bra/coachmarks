{
  "name": "coachmarks",
  "version": "1.3.0",
  "description": "On-board new users to your app and introduce new features with SVG sketches (coachmarks)",
  "source": "src/index.js",
  "main": "dist/coachmarks.umd.js",
  "browser": "dist/coachmarks.umd.js",
  "module": "dist/coachmarks.esm.js",
  "scripts": {
    "build": "rollup -c",
    "dev": "DEV=1 npm-run-all -l -p build:watch test:watch",
    "clean": "rimraf dist/*",
    "test:watch": "cypress open",
    "test": "./cypress/test_ci.sh",
    "test:record": "cypress run",
    "test:ci": "./cypress/test_ci.sh",
    "build:watch": "rollup -cw",
    "toc": "doctoc README.md --github",
    "debug": "node --inspect node_modules/ava/profile.js",
    "cover": "nyc ava && nyc report",
    "version": "npm run toc",
    "prepublishOnly": "npm run build",
    "docs:dev": "vuepress dev docs",
    "docs:build": "vuepress build docs"
  },
  "author": "Brian Hann",
  "license": "GPL-3.0",
  "dependencies": {
    "array-polar": "^1.0.1",
    "euclidean-distance": "^1.0.0",
    "leader-line": "^1.0.1",
    "lodash": "^4.17.4",
    "path-svg": "^0.2.1",
    "raf": "^3.4.0"
  },
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.7.0",
    "cypress": "^3.0.1",
    "doctoc": "^1.3.0",
    "eslint": "^4.5.0",
    "eslint-config-xo-space": "^0.16.0",
    "less": "^3.0.4",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.1.0",
    "rollup": "^0.50.0",
    "rollup-analyzer-plugin": "^1.1.1",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-commonjs": "^8.2.6",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-legacy": "^1.0.0",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sass": "^0.5.3",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-string": "^2.0.2",
    "rollup-plugin-svelte": "^4.1.0",
    "rollup-plugin-uglify": "^2.0.1",
    "svelte": "^2.7.0",
    "tiny-lr": "^1.0.5",
    "uglify-es": "^3.2.2",
    "uglify-js": "^3.1.3",
    "vuepress": "^0.10.0",
    "wait-on": "^2.0.2",
    "xo": "^0.18.2"
  },
  "xo": {
    "space": true,
    "extends": "xo-space/esnext",
    "ignores": [
      "*.scss",
      "*.svg",
      "*.html"
    ],
    "env": [
      "browser"
    ],
    "rules": {
      "capitalized-comments": "off",
      "curly": [
        "error",
        "multi-line"
      ],
      "import/extensions": "off",
      "new-cap": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    },
    "overrides": [
      {
        "files": "test/**",
        "rules": {
          "import/default": "off"
        }
      },
      {
        "files": "cypress/**",
        "globals": [
          "before",
          "beforeEach",
          "cy ",
          "Cypress",
          "describe",
          "ddescribe",
          "it"
        ],
        "rules": {
          "semi": "off",
          "comma-dangle": "off",
          "no-var": "off",
          "no-undef": "off",
          "space-before-function-paren": "off",
          "space-before-blocks": "off",
          "prefer-arrow-callback": "off",
          "no-unused-expressions": "off",
          "object-shorthand": "off",
          "no-unused-vars": "off",
          "padded-blocks": "off",
          "object-curly-spacing": "off",
          "max-nested-callbacks": "off",
          "indent": "off",
          "space-in-parens": "off",
          "no-multiple-empty-lines": "off",
          "camelcase": "off",
          "spaced-comment": "off",
          "unicorn/filename-case": "off",
          "import/no-unassigned-import": "off"
        }
      }
    ]
  },
  "ava": {
    "babel": "inherit",
    "source": [
      "src/**/*.js"
    ],
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ]
  },
  "engines": {
    "yarn": "YARN NO LONGER USED - use npm instead."
  }
}
