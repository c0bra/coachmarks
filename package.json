{
  "name": "coachmarks",
  "version": "1.0.0",
  "description": "On-board new users and introduce new features with explanatory coachmarks",
  "main": "dist/coachmarks.js",
  "browser": "dist/coachmarks.js",
  "scripts": {
    "clean": "rimraf generated/* dist/*",
    "test": "webpack && xo && ava",
    "watch": "npm run test -- --watch",
    "build": "webpack",
    "dev": "webpack-dev-server",
    "build:watch": "onchange src/** -- webpack",
    "toc": "doctoc README.md --github",
    "debug": "node --inspect node_modules/ava/profile.js",
    "cover": "nyc ava && nyc report"
  },
  "author": "Brian Hann",
  "license": "GPL-3.0",
  "devDependencies": {
    "ava": "^0.22.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2017": "^6.24.1",
    "cypress": "^1.0.2",
    "doctoc": "^1.3.0",
    "eslint": "^4.5.0",
    "eslint-config-xo-space": "^0.16.0",
    "html-webpack-plugin": "^2.30.1",
    "nyc": "^11.1.0",
    "rollup": "^0.50.0",
    "rollup-plugin-uglify": "^2.0.1",
    "uglify-js": "^3.1.3",
    "uglifyjs-webpack-plugin": "^1.0.0-beta.3",
    "webpack": "^3.7.1",
    "webpack-dev-server": "^2.9.1",
    "xo": "^0.18.2"
  },
  "xo": {
    "space": true,
    "extends": "xo-space/esnext",
    "env": [
      "browser"
    ],
    "rules": {
      "capitalized-comments": "off",
      "curly": [
        "error",
        "multi-line"
      ],
      "import/extensions": "off",
      "new-cap": "off",
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ]
    },
    "overrides": [
      {
        "files": "cypress/**",
        "globals": [
          "before",
          "beforeEach",
          "cy ",
          "Cypress",
          "describe",
          "ddescribe",
          "it"
        ],
        "rules": {
          "semi": "off",
          "comma-dangle": "off",
          "no-var": "off",
          "no-undef": "off",
          "space-before-function-paren": "off",
          "space-before-blocks": "off",
          "prefer-arrow-callback": "off",
          "space-before-function-paren": "off",
          "space-before-blocks": "off",
          "prefer-arrow-callback": "off",
          "no-unused-expressions": "off",
          "object-shorthand": "off",
          "no-unused-vars": "off",
          "padded-blocks": "off",
          "object-curly-spacing": "off",
          "max-nested-callbacks": "off",
          "indent": "off",
          "space-in-parens": "off",
          "no-multiple-empty-lines": "off",
          "camelcase": "off",
          "spaced-comment": "off",
          "unicorn/filename-case": "off",
          "import/no-unassigned-import": "off"
        }
      }
    ]
  },
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "dependencies": {
    "iselement": "^1.1.4",
    "lodash": "^4.17.4",
    "path-svg": "^0.2.1"
  }
}
